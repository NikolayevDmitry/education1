{% extends 'layouts/master.njk' %}

{% block title %}
  Регистрация на сайте
{% endblock %}

{% block content %}
  <br><br>
  <section id="contact">
    <div class="container">
      <h2 class="text-center"> Регистрация на сайте </h2>
      <div class="row">
        <div class="col-lg-8 mx-auto">
          <form name="sentMessage" novalidate="novalidate" method="POST" action="/register">
            <div class="control-group">
              <div class="form-group floating-label-form-group controls mb-0 pb-2">
                <label> Логин </label>
                <input class="form-control" name="login" type="text" placeholder="Логин" required="required" data-validation-required-message="Введите ваш логин.">
                <p class="help-block text-danger"></p>
              </div>
            </div>
            <div class="control-group">
              <div class="form-group floating-label-form-group controls mb-0 pb-2">
                <label> Полное имя </label>
                <input class="form-control" name="fullname" type="text" placeholder="Полное имя" required="required" data-validation-required-message="Введите полное имя.">
                <p class="help-block text-danger"></p>
              </div>
            </div>
            <div class="control-group">
              <div class="form-group floating-label-form-group controls mb-0 pb-2">
                <label> Почта </label>
                <input class="form-control" name="email" type="email" placeholder="Почта" required="required" data-validation-required-message="Введите пароль.">
                <p class="help-block text-danger"></p>
              </div>
            </div>
            <div class="control-group">
              <div class="form-group floating-label-form-group controls mb-0 pb-2">
                <label> Пароль </label>
                <input class="form-control" name="password" type="password" placeholder="Пароль" required="required" data-validation-required-message="Введите пароль.">
                <p class="help-block text-danger"></p>
              </div>
            </div>
            <div class="form-group">
              <button type="submit" class="btn btn-primary btn-xl"> Зарегистрироваться </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </section>
{% endblock %}
