{% extends 'layouts/master.njk' %}

{% block title %}
  Вход на сайт
{% endblock %}

{% block content %}
  <br> <br>
  <section id="contact">
    <div class="container">
      <h2 class="text-center">Вход на сайт</h2>
      <div class="row">
        <div class="col-lg-8 mx-auto">
          <form novalidate="novalidate" method="POST" action="/login">
            <div class="control-group">
              <div class="form-group floating-label-form-group controls mb-0 pb-2">
                <label> Логин </label>
                <input class="form-control" name="username" type="text" placeholder="Логин" required="required" data-validation-required-message="Введите ваш логин.">
                <p class="help-block text-danger"></p>
              </div>
            </div>
            <div class="control-group">
              <div class="form-group floating-label-form-group controls mb-0 pb-2">
                <label> Пароль </label>
                <input class="form-control" name="password" type="password" placeholder="Пароль" required="required" data-validation-required-message="Введите пароль.">
                <p class="help-block text-danger"></p>
              </div>
            </div>
            <div id="success"></div>
            <div class="form-group">
              <button type="submit" class="btn btn-primary btn-xl" id="sendMessageButton"> Войти </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </section>
{% endblock %}
